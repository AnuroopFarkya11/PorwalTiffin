<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackground"
    tools:context=".password_forgot">


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/contentback"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kotta_one"
            android:gravity="center_horizontal"
            android:text="SIGN UP"
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/helloName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello USER!"
            android:layout_gravity="left"
            android:layout_marginStart="34dp"
            android:layout_marginTop="20dp"
            android:textColor="#06252E"
            android:fontFamily="@font/itim"
            android:textSize="16dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset your password!"
            android:layout_gravity="left"
            android:layout_marginStart="34dp"
            android:layout_marginTop="1dp"
            android:textColor="#06252E"
            android:fontFamily="@font/itim"
            android:textSize="14dp"
            />

        <EditText
            android:id="@+id/getPass"
            android:layout_width="230dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/entryback"
            android:drawableLeft="@drawable/ic_baseline_lock_open_24"
            android:ems="10"
            android:fontFamily="@font/itim"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingStart="10dp"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="14dp" />


        <EditText
            android:id="@+id/getCPass"
            android:layout_width="230dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/entryback"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:ems="10"
            android:fontFamily="@font/itim"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:paddingStart="10dp"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="14dp" />

        <Button
            android:id="@+id/Continue"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:text="Continue"
            android:textSize="12dp"
            android:fontFamily="@font/itim"
            android:backgroundTint="#851308"
            app:cornerRadius="50dp"
            android:layout_marginBottom="10dp"/>


    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="330dp" />
</androidx.constraintlayout.widget.ConstraintLayout>