<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    android:layout_margin="10dp"
    android:background="@drawable/backtoalgse"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.052173913" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9130435" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.04032258" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9596774" />

        <TextView
            android:id="@+id/ord_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/itim"
            android:text="SABJI"
            android:textColor="#fff"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline2"
            app:layout_constraintEnd_toStartOf="@+id/guideline4"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toTopOf="@+id/guideline1"
            app:layout_constraintVertical_bias="0.328" />

        <ImageView
            android:id="@+id/ord_imageview"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toTopOf="@+id/guideline2"
            app:layout_constraintEnd_toStartOf="@+id/guideline4"
            app:layout_constraintHorizontal_bias="0.986"
            app:layout_constraintStart_toEndOf="@+id/ord_name_textview"
            app:layout_constraintTop_toTopOf="@+id/guideline1"
            app:layout_constraintVertical_bias="0.115"
            app:srcCompat="@drawable/aalukisabjii" />

        <Button
            android:id="@+id/add_button"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#06252E"
            android:fontFamily="@font/itim"
            android:text="ADD"
            app:cornerRadius="10dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline2"
            app:layout_constraintEnd_toEndOf="@+id/ord_imageview"
            app:layout_constraintStart_toStartOf="@+id/ord_imageview"
            app:layout_constraintTop_toBottomOf="@+id/ord_imageview"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/ord_rate_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/itim"
            android:text="Rs.5"
            android:textColor="#fff"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/ord_name_textview"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/ord_name_textview"
            app:layout_constraintTop_toBottomOf="@+id/ord_name_textview"
            app:layout_constraintVertical_bias="0.0" />

        <LinearLayout
            android:id="@+id/advance_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/guideline2"
            app:layout_constraintEnd_toEndOf="@+id/ord_imageview"
            app:layout_constraintStart_toStartOf="@+id/ord_imageview"
            app:layout_constraintTop_toBottomOf="@+id/ord_imageview"
            android:visibility="gone"
            >

                <Button
                    android:id="@+id/minus_btn"
                    android:layout_width="35dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:drawableBottom="@drawable/ic_baseline_remove_24"
                    />
                <TextView
                    android:id="@+id/show_cnt"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="#fff"
                    />
                <Button
                    android:id="@+id/plus_btn"
                    android:layout_width="35dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:drawableBottom="@drawable/ic_baseline_add_24"
                    android:layout_marginEnd="10dp"
                    />


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
