<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    android:layout_margin="10dp"
    android:background="#EDE7E7"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.052173913" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9130435" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04032258" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9596774" />

    <TextView
        android:id="@+id/ord_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/itim"
        android:text="SABJI"
        android:textColor="#06252E"
        android:textSize="19sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/guideline1"
        app:layout_constraintVertical_bias="0.328" />


    <TextView
        android:id="@+id/ord_rate_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/itim"
        android:text="Rs.5"
        android:textColor="#06252E"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ord_name_textview"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ord_name_textview"
        app:layout_constraintTop_toBottomOf="@+id/ord_name_textview"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/advance_btn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:visibility="visible"
        android:background="#06252E"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="@id/guideline4"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/ord_name_textview"
        app:layout_constraintTop_toTopOf="@+id/guideline1">

        <Button
            android:id="@+id/minus_btn"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:drawableBottom="@drawable/ic_baseline_remove_24" />

        <TextView
            android:id="@+id/show_cnt"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="0"
            android:textColor="#fff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/plus_btn"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:drawableBottom="@drawable/ic_baseline_add_24" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
